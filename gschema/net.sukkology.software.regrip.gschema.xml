<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="net.sukkology.software.regrip" path="/net/sukkology/software/regrip/">

    <key type="u" name="win-width">
      <default>400</default>
    </key>
    <key type="u" name="win-height">
      <default>450</default>
    </key>
    <key type="u" name="win-height-edit">
      <default>600</default>
    </key>
    <key type="u" name="win-width-min">
      <default>200</default>
    </key>
    <key type="u" name="win-height-min">
      <default>80</default>
    </key>

    <key type="s" name="cd-device">
      <default>'/dev/cdrom'</default>
      <summary>CD-ROM Block Device</summary>
      <description>Block device that will be used for ripping</description>
    </key>
    <key type="b" name="show-tray-icon">
      <default>true</default>
      <summary>Show tray icon</summary>
      <description>Shows an icon for Regrip in the tray</description>
    </key>

    <child name="cdplay" schema="net.sukkology.software.regrip.cdplay" />
    <child name="cdparanoia" schema="net.sukkology.software.regrip.cdparanoia" />
    <child name="rip" schema="net.sukkology.software.regrip.rip" />
    <child name="encoder" schema="net.sukkology.software.regrip.encoder" />
    <child name="tag" schema="net.sukkology.software.regrip.tag" />
    <child name="discdb" schema="net.sukkology.software.regrip.discdb" />
    <child name="proxy" schema="net.sukkology.software.regrip.proxy" />
  </schema>

  <schema id="net.sukkology.software.regrip.cdplay" path="/net/sukkology/software/regrip/cdplay/">
    <key type="b" name="no-interrupt">
      <default>false</default>
      <summary>Don't interrupt playback on exit/startup</summary>
      <description>If this is not selected, Grip will stop play when it starts and when it stops</description>
    </key>
    <key type="b" name="stop-first">
      <default>false</default>
      <summary>Rewind when stopped</summary>
      <description>If selected, Grip will rewind to the first track when play is stopped</description>
    </key>
    <key type="b" name="play-first">
      <default>true</default>
      <summary>Startup with first track if not playing</summary>
      <description>If this is not selected, Grip will begin with whatever track the cd-player played last</description>
    </key>
    <key type="b" name="play-on-insert">
      <default>false</default>
      <summary>Auto-play on disc insert</summary>
      <description></description>
    </key>
    <key type="b" name="automatic-reshuffle">
      <default>true</default>
      <summary>Reshuffle before each playback</summary>
      <description>If selected, Grip will re-randomize the tracks each time playback begins when in shuffle-play mode</description>
    </key>
    <key type="b" name="faulty-eject">
      <default>false</default>
      <summary>Work around faulty eject</summary>
      <description></description>
    </key>
    <key type="b" name="poll-drive">
      <default>true</default>
      <summary>Poll disc drive for new disc</summary>
      <description></description>
    </key>
    <key type="u" name="poll-interval">
      <range min="1" max="60" />
      <default>1</default>
      <summary>Poll interval (seconds)</summary>
      <description></description>
    </key>
  </schema>

  <schema id="net.sukkology.software.regrip.cdparanoia" path="/net/sukkology/software/regrip/cdparanoia/">
	<key type="b" name="disable-paranoia">
      <default>false</default>
      <summary>Disable paranoia</summary>
      <description>Disable all data verification and correction features. When enabled, cdparanoia reads data exactly as would cdda2wav with an overlap setting of zero. This option implies that extra paranoia is	also disabled.</description>
    </key>
	<key type="b" name="disable-extra-paranoia">
      <default>false</default>
      <summary></summary>
      <description>Only cdda2wav-style overlap checking will be done.</description>
    </key>
	<key type="b" name="disable-scratch-detect">
      <default>false</default>
      <summary>Do not look for scratches</summary>
    </key>
	<key type="b" name="disable-scratch-repair">
      <default>false</default>
      <summary>Disable scratch repair (still detect)</summary>
    </key>
    <key type="s" name="force-scsi">
      <default>''</default>
    </key>
  </schema>

  <schema id="net.sukkology.software.regrip.rip" path="/net/sukkology/software/regrip/rip/">
	<key type="b" name="auto-rip">
      <default>false</default>
      <summary>Auto-rip on insert</summary>
      <description>If selected, Grip will automatically select all tracks and begin ripping when a new (ie: no local disc data) disc is inserted</description>
    </key>
    <key type="b" name="beep-after-rip">
      <default>true</default>
      <summary>Beep after rip</summary>
      <description></description>
    </key>
    <key type="b" name="eject-after-rip">
      <default>true</default>
      <summary>Auto-eject after rip</summary>
      <description>If selected, Grip will automatically eject the disc when ripping is finished</description>
    </key>
    <key type="u" name="eject-delay">
      <range min="0" max="60" />
      <default>0</default>
      <summary>Auto-eject delay (seconds)</summary>
      <description></description>
    </key>
    <key type="b" name="delay-before-rip">
      <default>false</default>
      <summary>Delay before ripping</summary>
      <description></description>
    </key>
    <key type="b" name="stop-between-tracks">
      <default>false</default>
      <summary>Stop CD-Rom drive between tracks</summary>
      <description></description>
    </key>
    <key type="s" name="wav-filter-cmd">
      <default>''</default>
      <summary>WAV filter command</summary>
      <description>This command will be run after ripping but before encoding. It can be used to call a program to manipulate the .wav file in some way (such as doing normalization).; it accepts a single switch, %f, which translates as the ripped .wav file</description>
    </key>
    <key type="s" name="disc-filter-cmd">
      <default>''</default>
      <summary>Disc filter command</summary>
      <description></description>
    </key>
  </schema>

  <schema id="net.sukkology.software.regrip.encoder" path="/net/sukkology/software/regrip/encoder/">
    <key type="s" name="output-folder">
      <default>'~/Music'</default>
      <summary>File output format</summary>
      <description>The folder where ripped tracks will be saved</description>
    </key>
    <key type="s" name="output-filename">
      <default>'%A - %d/%t. %n.%x'</default>
      <summary>Output filename pattern</summary>
      <description>The pattern to use to generate filenames for ripped tracks</description>
    </key>
    <key type="s" name="selected-encoder">
      <default>''</default>
      <summary>Selected encoder</summary>
      <description>The encoder to use for encoding the ripped tracks</description>
    </key>
    <key type="s" name="selected-format">
      <default>''</default>
      <summary>Selected output format</summary>
      <description>The format to use for encoding the ripped tracks</description>
    </key>
    <key type="b" name="calc-gain">
      <default>true</default>
      <summary>Enable ReplayGain calculation</summary>
    </key>
    <key type="b" name="add-m3u">
      <default>true</default>
      <summary>Create .m3u files</summary>
    </key>
    <key type="b" name="rel-m3u">
      <default>true</default>
      <summary>Use relative paths in .m3u files</summary>
    </key>
    <key type="s" name="m3u-filename-format">
      <default>'~/Music/%A-%d.m3u'</default>
      <summary>M3U file name format</summary>
      <description></description>
    </key>
    <key type="s" name="encode-filter-cmd">
      <default>''</default>
      <summary>Encode filter command</summary>
      <description></description>
    </key>
  </schema>

  <schema id="net.sukkology.software.regrip.tag" path="/net/sukkology/software/regrip/tag/">
    <key type="b" name="add-tags">
      <default>true</default>
      <summary>Add tags to encoded files</summary>
    </key>
    <key type="s" name="comment-field">
      <default>'Ripped with Regrip'</default>
      <summary>Comment field</summary>
    </key>
  </schema>

  <schema id="net.sukkology.software.regrip.discdb" path="/net/sukkology/software/regrip/discdb/">
    <key type="b" name="automatic-discdb">
      <default>true</default>
      <summary>Perform disc lookups automatically</summary>
    </key>
    <key type="b" name="use-freedb">
      <default>true</default>
      <summary>Use freedb (instead of specifying your own server)</summary>
    </key>
    <key type="s" name="server-url">
      <default>'http://freedb.freedb.org/~cddb/cddb.cgi'</default>
      <summary>DiscDB server URL - Only Used if use-freedb is disabled</summary>
    </key>
    <key type="s" name="discdb-submit-email">
      <default>'freedb-submit@freedb.org'</default>
      <summary>DB Submit email</summary>
    </key>
  </schema>

  <schema id="net.sukkology.software.regrip.proxy" path="/net/sukkology/software/regrip/proxy/">
    <key type="b" name="use-proxy">
      <default>false</default>
      <summary>Use proxy server</summary>
    </key>
    <key type="b" name="use-proxy-env">
      <default>true</default>
      <summary>Use proxy server</summary>
    </key>
    <key type="s" name="proxy-name">
      <default>''</default>
      <summary>Proxy server</summary>
    </key>
    <key type="u" name="proxy-port">
      <default>3128</default>
      <summary>Proxy port</summary>
    </key>
    <key type="s" name="proxy-user">
      <default>''</default>
      <summary>Proxy username</summary>
    </key>
    <key type="s" name="proxy-pswd">
      <default>''</default>
      <summary>Proxy password</summary>
    </key>
  </schema>
</schemalist>

